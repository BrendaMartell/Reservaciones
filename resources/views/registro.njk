<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Cine GO | Recorriendo tu Alma</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <!-- Bootstrap 3.3.7 -->
  <link rel="stylesheet" href="bootstrap/css/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="admin_template/dist/css/AdminLTE.min.css">
  <link rel="stylesheet" href="admin_template/dist/css/skins/_all-skins.min.css">

  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
<script src="admin_template/plugins/jQuery/jquery-3.1.1.min.js"></script>
<!-- jQuery UI 1.11.4 -->
<script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>

</head>
<body class="hold-transition login-page">

                <div class="row">
                <div class="col-md-4 col-lg-4"></div>
                <div class="col-md-4 col-lg-4">
        <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title" id="titulo_formulario">Registro de Clientes</h3>
            </div>
            <div>
            </div>
            <form id="formulario" role="form" method="POST" action="/reg_cte">
            {{ csrfField }}
                    <div class="box-body" id="Pnl_Registro" >
                        
                <div class="alert alert-success alert-dismissible" style="display:none" id="alerta">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h4><i class="icon fa fa-info"></i> Ahora puedes iniciar Sesion</h4>
                    Info alert preview. This alert is dismissable.
                  </div>
                        <div class="form-group">
                          <label for="nombres">Nombres</label>
                          <input type="hidden" class="form-control" id="id_persona" name="id_persona" placeholder="Ingrese su nombre(s)">
                          <input style="text-transform: uppercase;" type="text" class="form-control" id="nombres" name="nombres" placeholder="Ingrese su nombre(s)">
                        </div>
                        <div class="form-group">
                          <label for="apellidos">Apellidos</label>
                          <input style="text-transform: uppercase;" type="text" class="form-control" id="apellidos" name="apellidos" placeholder="Ingrese sus apellidos">
                        </div>
                        <div class="form-group">
                          <label for="email">Email</label>
                          <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                        </div>
                        <div class="form-group" style="display:none">
                          <label for="numero_aut">Numero Tarjeta</label>
                          <input type="text" class="form-control" id="numero_aut" name="numero_aut" placeholder="Numero de Tarjeta" readonly="true">
                        </div>
                        <div class="form-group pwd">
                          <label for="password">Password</label>
                          <input type="text" class="form-control" id="password" name="password" placeholder="Ingrese su Password">
                        </div>
                      </div>
                      <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <button type="button" id="Btn_Cancela" href="/log" class="btn btn-primary">Volver al Login</button>
                      </div>
              
            </form>
          </div>
                </div>
                <div class="col-md-4 col-lg-4"></div>
                </div>
    </body>
    <script type='text/javascript'>
        $(document).ready(function(){
            var tab=document.getElementById('tbody');
            var Pnl_Registro=document.getElementById('Pnl_Registro');
            var Pnl_Tabla=document.getElementById('Pnl_Tabla');
            if('{{user.numero_aut}}' != "" ){
                $("#alerta").html(
                    '<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>' +
                    '<h4><i class="icon fa fa-info"></i> Ahora puedes iniciar Sesion</h4>' +
                    'Tu numero de usuario para iniciar sesion es: <b>' + '{{user.numero_aut}}' + '</b>' 
                    //'<a href="/logus/'+ '{{user.numero_aut}}' +'" class="btn btn-info">Logearme</a>'
                );
                document.getElementById('alerta').style.display = 'block';
            }
            $("#EnPantalla").text("Clientes")
            var Movimiento ="";
            console.log('{{user}}');
            $("#nombres").val('{{persona.nombres}}');
            $("#apellidos").val('{{persona.apellidos}}');
            $("#email").val('{{persona.email}}');
            $("#numero_aut").val('{{user.numero_aut}}');
        });

    </script>
</html>